generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PRODUCT_STATUS {
  ACTIVE
  INACTIVE
  DRAFT
}

model Product {
  id         Int            @id @default(autoincrement())
  name       String
  slug       String         @unique
  desc       String
  price      Float
  stock      Int
  status     PRODUCT_STATUS @default(DRAFT)
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt
}
